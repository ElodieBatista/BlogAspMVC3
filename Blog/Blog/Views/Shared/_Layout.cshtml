@using Blog.Resources
@using CodeFirstMembershipSharp

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    </head>
    <body>
        <nav>
            <ul id="menu">
                <div id="lis">
                    @if (WebSecurity.IsAuthenticated) {
                        <li>@Html.ActionLink(Res.Home, "Index", "Home")</li>
                        <li>@Html.ActionLink(Res.Posts, "Index", "Posts")</li>
                        <li>@Html.ActionLink(Res.Comments, "Index", "Comments")</li>
                        <li>@Html.ActionLink(Res.Personal, "Index", "Personals")</li>
                    } else {
                        <li> </li>
                        <li> </li>
                        <li> </li>
                        <li>@Html.ActionLink(Res.Home, "Index", "Home")</li>
                    }

                    <li>@Html.ActionLink("Search", "Index", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "Index", "Home")</li>
                    <li id="liLog">@Html.Partial("_LogOnPartial")</li>
                </div>
            </ul>
        </nav>

        <div class="page">
            <header>
                <div id="banner">
                    <div id="photo-name">
                        <img id="photo" src="@Url.Content("/Content/themes/base/Images/photo.png")" alt="photo" />
                        <div id="name">
                            <h1>@ViewBag.PersonalFirstName @ViewBag.PersonalLastName</h1>
                        </div>
                    </div>
                
                    <div id="title">
                        <h2>@ViewBag.PersonalTitle</h2>
                    </div>
                
                </div>
            </header>

            <div id="main">
                <aside>
                    <div id="subtitle">
                        <h4>@Res.BlogOf @ViewBag.PersonalFirstName @ViewBag.PersonalLastName</h4>
                    </div>
                
                    <div id="social">
                        <a href="http://www.rss.com"><img src="@Url.Content("/Content/themes/base/Images/rss.png")" alt="rss" /></a>
                        <a href="http://www.twitter.com"><img src="@Url.Content("/Content/themes/base/Images/twitter.png")" alt="twitter" /></a>
                        <a href="http://www.facebook.com"><img src="@Url.Content("/Content/themes/base/Images/facebook.png")" alt="facebook" /></a>
                    </div>

                    <div id="description">
                        <p>
                            @ViewBag.PersonalDescription
                        </p>
                    </div>
                    <div id="mvp">
                        <img src="@Url.Content("/Content/themes/base/Images/mvp.png")" alt="mvp" />
                    </div>
                </aside>

                <section id="view">
                    @RenderBody()
                </section>
            </div>

            <footer>
                <p>© @ViewBag.PersonalFirstName @ViewBag.PersonalLastName @Res.CopyRight @ViewBag.PersonalFirstName @ViewBag.PersonalLastName</p>
            </footer>
        </div>
    </body>
</html>